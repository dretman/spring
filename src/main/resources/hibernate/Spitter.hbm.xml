<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.dataart.retman.domain.Spitter" table="spitters">

        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="username" type="string">
            <column name="username" length="10" not-null="true" unique="true" />
        </property>
        <property name="password" type="string">
            <column name="password" length="10" not-null="true" unique="true" />
        </property>
        <property name="fullName" type="string">
            <column name="fullname" length="10" not-null="true" unique="true" />
        </property>
        <property name="email" type="string">
            <column name="email" length="10" not-null="true" unique="true" />
        </property>
        <property name="isUpdatedById" type="boolean">
            <column name="isupdatedbyemail" length="10" not-null="true" />
        </property>

    </class>
</hibernate-mapping>
