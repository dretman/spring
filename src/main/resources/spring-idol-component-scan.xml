<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">


    <context:component-scan base-package="com.dataart.retman">
        <context:include-filter type="assignable" expression="com.dataart.retman.beans.Instrument"/>
        <context:exclude-filter type="annotation" expression="com.dataart.retman.annotation.SkipIt"/>
    </context:component-scan>

</beans>