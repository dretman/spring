<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">


    <bean id="criticismEngine" class="com.dataart.retman.beans.impl.CriticismEngineImpl">
        <property name="criticismPool">
            <list>
                <value>I'm not being rude, but that was appalling.</value>
                <value>You may be the least talented person in this show.</value>
                <value>Do everyone a favor and keep your day job.</value>
            </list>
        </property>
    </bean>

    <bean class="com.dataart.retman.aspect.JudgeAspect" factory-method="aspectOf">
        <property name="criticismEngine" ref="criticismEngine"/>
    </bean>

    <bean id="denis" class="com.dataart.retman.beans.impl.Instrumentalist">
        <property name="instrument">
            <bean class="com.dataart.retman.beans.impl.musical.instrument.Saxophone"/>
        </property>
    </bean>

</beans>