<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>

    <bean id="saxophone" class="com.dataart.retman.beans.impl.musical.instrument.Saxophone"/>
    <bean id="piano" class="com.dataart.retman.beans.impl.musical.instrument.Piano" autowire-candidate="true"/>
    <bean id="guitar" class="com.dataart.retman.beans.impl.musical.instrument.Guitar" autowire-candidate="true"/>
    <bean id="knife" class="com.dataart.retman.beans.impl.Knife" scope="prototype"/>

    <bean id="knifeJuggler" class="com.dataart.retman.beans.impl.KnifeJuggler"/>

    <bean id=" kenny" class="com.dataart.retman.beans.impl.Instrumentalist">
        <property name="age" value="18"/>
        <property name="song" value="Jingle Bells"/>
    </bean>

</beans>